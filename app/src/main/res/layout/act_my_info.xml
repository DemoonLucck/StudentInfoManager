<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/MainTitleStyle"
        android:elevation="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_my_info_back"
            android:layout_width="@dimen/button_height_small"
            android:layout_height="@dimen/button_height_small"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:background="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="关于软件"
            android:textColor="@color/white"
            android:textSize="@dimen/font_largest"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_normal">

                <TextView
                    style="@style/StuInfoType"
                    android:text="                    "
                    />

                <ImageView
                    android:src="@drawable/iclogo"
                    />

            </TableRow>

            <View
                style="@style/WireThinHorizontal"/>

            <TableRow
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_normal">

                <TextView
                    style="@style/StuInfoType"
                    android:text="版本"
                    />

                <TextView
                    style="@style/MyInfoDetail"
                    android:text="1.0.1"
                    />

            </TableRow>

            <View
                style="@style/WireThinHorizontal"/>


            <View
                style="@style/WireThinHorizontal"/>

            <TableRow
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_normal">

                <TextView
                    style="@style/StuInfoType"
                    android:text="地区"
                    />

                <TextView
                    style="@style/MyInfoDetail"
                    android:text="浙江杭州"
                    />

            </TableRow>

            <View
                style="@style/WireThinHorizontal"/>

            <TableRow
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_normal">

                <TextView
                    style="@style/StuInfoType"
                    android:text="学校"
                    />

                <TextView
                    style="@style/MyInfoDetail"
                    android:text="杭州电子科技大学"
                    />

            </TableRow>

            <View
                style="@style/WireThinHorizontal"/>

            <View
                style="@style/WireThinHorizontal"/>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="164dp"
                android:padding="@dimen/spacing_normal">

                <TextView
                    style="@style/StuInfoType"
                    android:text="开发人员" />

                <TextView
                    style="@style/MyInfoDetail"
                    android:text="李顺、周平、崔东彬、赵婧娟、徐艳玲" />

            </TableRow>

            <View
                style="@style/WireThinHorizontal"/>
            <TableRow
                android:layout_width="wrap_content"
                android:padding="@dimen/spacing_normal">

                <TextView
                    style="@style/StuInfoType"
                    android:text="联系我们"
                    />

                <TextView
                    style="@style/MyInfoDetail"
                    android:inputType="phone"
                    android:text="18112345678"
                    />

            </TableRow>
        </TableLayout>

    </ScrollView>

</LinearLayout>